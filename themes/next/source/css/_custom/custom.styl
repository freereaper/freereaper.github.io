// 下载样式
a#newstyle {
	display: inline-block;
	padding: 0 10px;
    color: #9B30FF;
   // color: #4d5057;
	background: transparent;
	border: 2px solid #333;
	//border: 2px solid #9B30FF;
	border-radius: 2px;
	transition: all .5s ease;
	font-weight: bold;
	&:hover {
		background: #000;
		color: #fff;
	}
}

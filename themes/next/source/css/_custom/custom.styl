// Custom styles.
// Custom styles.
.posts-expand .post-body img {
    border: 0 !important;
}

.post-body a {
    color: #72baa7;
    border-bottom: none;
}

.post-body a:hover {
    color: #0bdca5;
    border-bottom: 1px solid #999;
}

// Pisces
.post-more-link a {
    border: 2px solid #555;
}

code {
    color: #fff;
    background: #333;
    margin: 2px;
    border: 1px solid #333;
}

.highlight, pre {
    margin: 5px 0;
    padding: 5px;
    border: 1px solid #d6d6d6;
    border-radius: 3px;
}

// li 符号实心圆
.posts-expand .post-body ul li {
    list-style: disc;
}

